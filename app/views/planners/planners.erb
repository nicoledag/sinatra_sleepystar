<h2><%=current_user.username.capitalize%>'s Planners </h2>
<br>

<%@planners.each do |p| %>
<a href="/planners/<%=p.id%>">
  <h3>Baby: <%=p.baby.name%></h3></a>
  <h3>Date: <%=p.created_at.strftime("%m-%d-%Y")%></h3>

<table>
  <tr>
    <th></th>
    <th>Start Time</th>
    <th>Finish Time</th>
    <th>Total Time</th>
  </tr>
  <tr>
    <th>Wake Time:</th>
    <td><%=p.wake_time%></td>
    <td></td>
    <td></td>
  </tr>
  <tr>
    <th>Morning Nap:</th>
    <td><%=p.morning_nap_start_time%></td>
    <td><%=p.morning_nap_end_time%></td>
    <td></td>
  </tr>
  <tr>
    <th>Midday Nap:</th>
    <td><%=p.midday_nap_start_time%></td>
    <td><%=p.midday_nap_end_time%></td>
    <td></td>
  </tr>
  <tr>
    <th>Late Afternoon Nap:</th>
    <td><%=p.late_afternoon_nap_start_time%></td>
    <td><%=p.late_afternoon_nap_end_time%></td>
    <td></td>
  </tr>
  <tr>
    <th>Bed Time:</th>
    <td><%=p.bed_time%></td>
    <td></td>
    <td></td>
  </tr>
</table>

<br>
<h4>Notes: <%=p.notes%></h4>

<br>
<%end%>
